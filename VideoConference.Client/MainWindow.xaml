<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Conference Client" Height="600" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Connection Panel -->
        <GroupBox Header="Connessione" Grid.Row="0" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtServerUrl" Text="http://localhost:5000" Width="200" Margin="5"/>
                <TextBox x:Name="txtUserName" Text="Utente1" Width="100" Margin="5"/>
                <TextBox x:Name="txtRoomId" Text="stanza1" Width="100" Margin="5"/>
                <Button x:Name="btnConnect" Content="Connetti" Width="80" Margin="5"/>
                <Button x:Name="btnDisconnect" Content="Disconnetti" Width="80" Margin="5"/>
            </StackPanel>
        </GroupBox>

        <!-- Status Panel -->
        <GroupBox Header="Stato" Grid.Row="1" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="txtStatus" Text="Non connesso" Margin="5" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtVideoStatus" Text="Video: Disattivo" Margin="10" VerticalAlignment="Center"
                          Foreground="Red"/>
            </StackPanel>
        </GroupBox>

        <!-- Video Panels -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Local Video -->
            <GroupBox Header="Video Locale" Grid.Column="0" Margin="5">
                <Border BorderBrush="Gray" BorderThickness="1" Background="Black">
                    <Grid>
                        <Image x:Name="localVideoImage" 
                               Stretch="Uniform"/>
                        <TextBlock x:Name="txtLocalVideoPlaceholder" 
                                   Text="Nessun video disponibile" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Foreground="White"/>
                    </Grid>
                </Border>
            </GroupBox>

            <!-- Remote Video -->
            <GroupBox Header="Video Remoto" Grid.Column="1" Margin="5">
                <Border BorderBrush="Gray" BorderThickness="1" Background="Black">
                    <Grid>
                        <Image x:Name="remoteVideoImage" 
                               Stretch="Uniform"/>
                        <TextBlock x:Name="txtRemoteVideoPlaceholder" 
                                   Text="In attesa di connessione remota" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Foreground="White"/>
                    </Grid>
                </Border>
            </GroupBox>
        </Grid>

        <!-- Controls -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnStartVideo" Content="Avvia Video" Width="100" Margin="5"/>
            <Button x:Name="btnStopVideo" Content="Ferma Video" Width="100" Margin="5"/>
            <Button x:Name="btnStartAudio" Content="Avvia Audio" Width="100" Margin="5" IsEnabled="False"/>
            <Button x:Name="btnStopAudio" Content="Ferma Audio" Width="100" Margin="5" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>